{
  "name": "system-mail-youpi-backend",
  "version": "1.0.0",
  "description": "Backend API pour Youpi Mail avec intégration SendGrid",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "nodemon --inspect src/index.js",
    "prod": "NODE_ENV=production node src/index.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:email": "jest --testNamePattern=\"email\" --verbose",
    "test:auth": "jest --testNamePattern=\"auth\" --verbose",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "clean": "rm -rf node_modules && rm -rf coverage",
    "reinstall": "npm run clean && npm install",
    "check-env": "node -e \"console.log('SENDGRID_API_KEY:', process.env.SENDGRID_API_KEY ? '✓ Configured' : '✗ Missing'); console.log('SMTP_SENDER:', process.env.SMTP_SENDER || '✗ Missing');\"",
    "health-check": "curl -X GET https://system-mail-youpi-backend.onrender.com/api/health || echo 'Server not responding'"
  },
  "keywords": [
    "email",
    "sendgrid",
    "api",
    "nodemailer",
    "express",
    "youpi-mail"
  ],
  "author": "Youpi Mail Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/system-mail-youpi-backend"
  },
  "bugs": {
    "url": "https://github.com/yourusername/system-mail-youpi-backend/issues"
  },
  "homepage": "https://system-mail-youpi-backend.onrender.com",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemailer": "^6.9.15",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "rate-limit": "^0.0.2",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}